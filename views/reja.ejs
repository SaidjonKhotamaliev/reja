<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>REJA</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body style="background-color: #b8bbd1">
    <div class="container">
      <h1 class="d4 text-center py1">REJA VA MAQSADLAR</h1>
      <div class="jumbotron p-3 shadow-sm">
        <form action="/create-item" id="create-form" method="POST">
          <div class="d-flex align-items-center">
            <input
              name="reja"
              type="text"
              id="create-field"
              autofocus
              autocomplete="off"
              class="form-control mr-3"
              style="flex: 1"
            />
            <button class="btn btn-primary" style="border-radius: 20px">
              Yangi reja qurish
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- <div class="container"></div>
    <div class="container"><%= items[1].reja%></div> -->

    <ul id="item-list" class="list-group pb-5">
      <% items.map(function(item) { %>
      <li
        class="list-group-item list-group-item-info d-lfex align-items-center justify-content-between"
      >
        <span class="item-text"><%= item.reja%></span>
        <div class="d-flex justify-content-end">
          <button
            data-id="<%=item._id%>"
            class="edit-me btn btn-secondary btn-sm mr-1"
          >
            Ozgartirish
          </button>
          <button
            data-id="<%=item._id%>"
            class="btn btn-danger delete-me btn-sm"
          >
            Ochirish
          </button>
        </div>
      </li>
      <% }) %>
    </ul>
    <button
      id="clean-all"
      class="btn btn-danger flex"
      style="border-radius: 20px; margin: 20px 65px"
    >
      Hamma rejalarni o'chirish
    </button>
  </body>
</html>
